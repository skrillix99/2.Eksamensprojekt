@using _2.Eksamensprojekt.Pages.LogInd
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _2.Eksamensprojekt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Dennis.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">_2.Eksamensprojekt</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        @{
                            if (LogIndModel.LoggedInUser == null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/LogInd/LogInd">Login</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item nav-link mr-3">
                                    User: @LogIndModel.LoggedInUser.EmailLogInd
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/LogInd/LogUd">Logout</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <nav class="menuknapper">
            <div class="rowtest">
                <form method="get">
                    <div class="columntest"><input type="submit" formaction="/Shared/LedigeLokaler" value="Ledige Lokaler" class="skaler btn btn-primary"></div>
                </form>
                <form method="get">
                    <div class="columntest"><input type="submit" formaction="/AdministrationPages/AdministrationBooking" value="Mine Bookinger" class="skaler btn btn-primary"></div>
                </form>
                <form method="get">
                    <div class="columntest"><input type="submit" formaction="/Shared/BookedeLokaler" value="Alle Bookinger" class="skaler btn btn-primary"></div>
                </form>
            </div>
        </nav>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
