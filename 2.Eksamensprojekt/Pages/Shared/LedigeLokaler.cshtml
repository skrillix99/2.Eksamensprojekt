@page
@model _2.Eksamensprojekt.Pages.Shared.LedigeLokalerModel
@{
}

<form method="post">
    <div class="form-group rounded">
        <label>Søgekriterier</label>
        </br>
        <select id="SortType" name="SortType" asp-for="@Model.SoegeKriterier" class="form-control text-center">
            @foreach (var sk in Model.SoegeKriterierVaerdier)
            {
                <option value="@sk">@sk</option>
            }
        </select>
        </br>
        <input type="submit" value="Søg" class="btn btn-primary" />
    </div>
</form>


<div class="row">
    <div class="col-md-8">
        @foreach (var LkD in @Model.LokaleData)
        {

        <div class="card mb-2" style="width: 30rem;">
            <div class="card-header p-2">
                <h5 class="card-title">@LkD.LokaleNummer. @LkD.LokaleNavn</h5>
                <h5>@if (LkD.LokaleSmartBoard == true) {
                    @("(M. SmartBoard)")
                    }
                    @if(LkD.LokaleSmartBoard == false)
                {
                    @("(U. SmartBoard)")
                }
                </h5>
            </div>
            <div class="card-body">
                <p class="card-text">Størrelse: @LkD.LokaleSize</p>

                <form>
                    <input type="submit" value="Book" class="btn btn-primary book-btn font-weight-bold" />
                </form>
            </div>
        </div>
        }
    </div>
</div>