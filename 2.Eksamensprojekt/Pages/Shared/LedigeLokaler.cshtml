@page
@model _2.Eksamensprojekt.Pages.Shared.LedigeLokalerModel
@{
}


<div class="row">
    <div class="col-md-8">
        @foreach (var LkD in @Model.LokaleData)
        {

            <div class="card mb-2" style="width: 30rem;">
                <div class="card-header p-2">
                    <h5 class="card-title">@LkD.LokaleNummer. @LkD.LokaleNavn</h5>
                    <h5>
                        @if (LkD.LokaleSmartBoard == true)
                        {
                            @("(M. SmartBoard)")
                        }
                        @if (LkD.LokaleSmartBoard == false)
                        {
                            @("(U. SmartBoard)")
                        }
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Størrelse: @LkD.LokaleSize</p>
                    
                    <form method="post">
                        @if (Model.TestB == "marx3796@zealand.dk")
                        {
                            <input type="submit" value="Lærer Book" class="btn btn-primary"/>
                        }
                        @if (Model.TestA == "jepp198l@zealand.dk")
                        {
                            <input type="submit" value="Admin Book" class="btn btn-primary" />
                        }
                        @if (Model.TestC == "alex650w@zealand.dk")
                        {
                            <input type="submit" value="Stud Book" class="btn btn-primary"/>
                        }
                    </form>
                </div>
            </div>
        }
    </div>
</div>

