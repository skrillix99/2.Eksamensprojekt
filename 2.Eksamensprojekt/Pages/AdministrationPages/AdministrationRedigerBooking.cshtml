@page "{id:int}"
@using SuperBookerData
@model _2.Eksamensprojekt.Pages.AdministrationPages.AdministrationRedigerBookingModel
@{
}
<a asp-page="/AdministrationPages/AdministrationMineBooking">< TILBAGE</a>
<div class="centered">
    <h1>Booking af</h1>
    <div class="lokaleInfoWrapper" style="width: unset">
        <h3>@Model.Booking.Lokale.LokaleNummer @Model.Booking.Lokale.LokaleNavn</h3>
        <p><b>Størrelse:</b> @Enum.GetName(typeof(LokaleSize), (Model.Booking.Lokale.LokaleSize - 1))</p>
    </div>


    <form method="post">

        <fieldset>
            <label>Tidspunkt og dato Fra:</label>
            <br />
            <input type="datetime-local" asp-for="@Model.Booking.Dag" />
        </fieldset>
        <fieldset>
            <label>Til:</label>
            <br />
            <input type="time" asp-for="Booking.TidSlut" />
        </fieldset>
        <fieldset>
            <label>Bookes for</label>
            <br />
            <select asp-for="@Model.Booking.BookesFor">
                @foreach (var rolle in Enum.GetValues(typeof(brugerRolle)))
                {
                    <option value="@rolle">@rolle</option>

                }
            </select>
        </fieldset>

        <input type="submit" value="Rediger" class="btn-primary"/>
    </form>
</div>


<script>
    var today = new Date().toISOString().slice(0, 16);

    document.getElementsByName("Booking.Dag")[0].min = today;
</script>